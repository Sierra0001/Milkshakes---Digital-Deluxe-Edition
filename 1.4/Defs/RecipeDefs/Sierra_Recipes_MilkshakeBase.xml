    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
  	<allowMixingIngredients>true</allowMixingIngredients>
		<targetCountAdjustment>1</targetCountAdjustment>
    <recipeUsers>
      <li>FueledStove</li>
      <li>ElectricStove</li>
		</recipeUsers>
    <ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Milk</li>
					</thingDefs>
				</filter>
				<count>8</count>
			</li>
		</ingredients>
    <products>
      <Sierra_Milkshake>4</Sierra_Milkshake>
    </products>
