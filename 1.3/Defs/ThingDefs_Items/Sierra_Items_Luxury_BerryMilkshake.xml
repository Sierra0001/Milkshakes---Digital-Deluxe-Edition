<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ResourceBase">
    <defName>Sierra_BerryMilkshake</defName>
    <label>berry milkshake</label>
    <description>A delightful shaken drink. Needs little preperation and fulfills the need for recreation, but it is not very nutritious and deteriorate quickly if not preserved.</description>
    <graphicData>
      <texPath>Things/Item/Resource/Sierra_BerryMilkshake</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
      <drawSize>0.88</drawSize>
      <!--<color>(135,100,80)</color>-->
    </graphicData>
    <soundInteract>Standard_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <socialPropernessMatters>true</socialPropernessMatters>
    <costList>
      <Milk>3</Milk>
      <Chocolate>1</Chocolate>
    </costList>
    <statBases>
      <MaxHitPoints>60</MaxHitPoints>
      <MarketValue>3.4875</MarketValue> <!-- Milk x1.5 (1.9) + Berries x1.5 (1.2) -> 75% -->
