<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <RecipeDef>
    <defName>Sierra_MakeMixedBerryMilkshakeSmall</defName>
    <label>make mixed berry milkshake</label>
    <description>Make mixed berry milkshake, a delightful and healthy treat.</description>
    <jobString>Making mixed berry milkshake.</jobString>
    <workAmount>300</workAmount> <!-- Reference: Simple Meal -->
    <workSpeedStat>CookSpeed</workSpeedStat>
    <workSkill>Cooking</workSkill>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
  	<allowMixingIngredients>true</allowMixingIngredients>
		<targetCountAdjustment>1</targetCountAdjustment>
    <recipeUsers>
      <li>FueledStove</li>
      <li>ElectricStove</li>
		</recipeUsers>
    <ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Milk</li>
					</thingDefs>
				</filter>
				<count>2</count>
			</li>
      <li>
        <filter>
          <thingDefs>
            <li>RawBerries</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
		</ingredients>
    <products>
      <Sierra_MixedBerryMilkshake>1</Sierra_MixedBerryMilkshake>
    </products>
    <skillRequirements>
        <Cooking>4</Cooking>
    </skillRequirements>
  </RecipeDef>

  <RecipeDef>
    <defName>Sierra_MakeMixedBerryMilkshakeMedium</defName>
    <label>make mixed berry milkshakes x4</label>
    <description>Make mixed berry milkshakes, a delightful and healthy treat.\n\nThis is a batch recipe that utilise a slightly more efficient production process.</description>
    <jobString>Making mixed berry milkshakes.</jobString>
    <workAmount>1050</workAmount> <!-- Batch Bonus 3.5x -->
    <workSpeedStat>CookSpeed</workSpeedStat>
    <workSkill>Cooking</workSkill>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
  	<allowMixingIngredients>true</allowMixingIngredients>
		<targetCountAdjustment>1</targetCountAdjustment>
    <recipeUsers>
      <li>FueledStove</li>
      <li>ElectricStove</li>
		</recipeUsers>
    <ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Milk</li>
					</thingDefs>
				</filter>
				<count>8</count>
			</li>
      <li>
        <filter>
          <thingDefs>
            <li>RawBerries</li>
          </thingDefs>
        </filter>
        <count>4</count>
      </li>
		</ingredients>
    <products>
      <Sierra_MixedBerryMilkshake>4</Sierra_MixedBerryMilkshake>
    </products>
    <skillRequirements>
        <Cooking>5</Cooking> <!-- Cooking for people is harder than cooking for just yourself -->
    </skillRequirements>
  </RecipeDef>

  </Defs>
