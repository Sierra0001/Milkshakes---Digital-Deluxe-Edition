<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <RecipeDef>
    <defName>Sierra_MakeAmbrosiaMilkshakeSmall</defName>
    <label>make ambrosia milkshake</label>
    <description>Make ambrosia milkshake, a sweet and healthy treat.\n\nExtra care is taken during the preparation process to negate chemical effects of the fruit.</description>
    <jobString>Making ambrosia milkshake.</jobString>
    <workAmount>300</workAmount> <!-- Reference: Simple Meal -->
    <workSpeedStat>CookSpeed</workSpeedStat>
    <workSkill>Cooking</workSkill>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
  	<allowMixingIngredients>true</allowMixingIngredients>
		<targetCountAdjustment>1</targetCountAdjustment>
    <recipeUsers>
      <li>FueledStove</li>
      <li>ElectricStove</li>
		</recipeUsers>
    <ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Milk</li>
					</thingDefs>
				</filter>
				<count>2</count>
			</li>
      <li>
        <filter>
          <thingDefs>
            <li>Ambrosia</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>MedicineHerbal</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
		</ingredients>
    <products>
      <Sierra_AmbrosiaMilkshake>1</Sierra_AmbrosiaMilkshake>
    </products>
    <skillRequirements>
        <Cooking>4</Cooking>
    </skillRequirements>
  </RecipeDef>

